@model List<ТЗ.Models.DirectoryModel>
@{
    int counter = 2;
}
<h2>Directories:</h2>
<hr />
<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Directory">1</a>
@foreach (var item in Model)
{
    <form asp-action="OpenDirectory" asp-controller="Directory" method="post">
        <input name="path" value="@item.Path" type="hidden" />
        <button class="btn btn-outline-primary">@counter</button>
    </form>

    counter++;
}
<div class="text-end">
    <br />
    <form asp-controller="Directory" asp-action="InputPathOfDirectory">
        <br />
        <button class="btn btn-primary">Add</button>
    </form>

</div>